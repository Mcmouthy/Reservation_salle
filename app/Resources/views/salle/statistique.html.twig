{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="center">Statistique des salles</h1>
    <div class="center">
        <table class="table table-striped table-bordered table-style">
            <thead>
                <tr>
                    <th class="center table-title">Salle</th>
                    <th class="center table-title">Type</th>
                    <th class="center table-title">Année</th>
                    <th class="center table-title">Mois</th>
                    <th class="center table-title">Semaine</th>
                    <th class="center table-title">Temps de résevartion (heures)</th>
                    <th class="center table-title">Taux d'occupation (%)</th>
                </tr>
            </thead>
            <tbody>
                {%  for result in results %}
                <tr>
                    <td class="center">{{ result.salle }}</td>
                    <td class="center">{{ result.typesalle }}</td>
                    <td class="center">{{ result.year }}</td>
                    <td class="center">{{ result.month }}</td>
                    <td class="center">{{ result.week }}</td>
                    <td class="center">{{ (result.temps/60)|round(2, 'floor') }}</td>
                    <td class="center">{{ result.stat }}</td>
                </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}