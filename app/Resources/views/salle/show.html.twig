{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="center">Informations de salle</h1>
    {% for s in salle %}
        <table class="table table-striped table-bordered table-style-delete">
            <tbody>

                {#<tr>
                    <th class="center table-title">Id</th>
                    <td class="center">{{ salle.id }}</td>
                </tr>#}
                <tr>
                    <th class="center table-title">Type de salle</th>
                    <td class="center">{{ s.typesalle }}</td>
                </tr>
                <tr>
                    <th class="center table-title">Numero</th>
                    <td class="center">{{ s.numero }}</td>
                </tr>
                <tr>
                    <th class="center table-title">Capacite</th>
                    <td class="center">{{ s.capacite }}</td>
