{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reserves list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Personneid</th>
                <th>Salleid</th>
                <th>Duree</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Code</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserve in reserves %}
            <tr>
                <td><a href="{{ path('reserve_show', { 'id': reserve.id }) }}">{{ reserve.id }}</a></td>
                <td>{{ reserve.personneId }}</td>
                <td>{{ reserve.salleId }}</td>
                <td>{{ reserve.duree }}</td>
                <td>{% if reserve.dateDebut %}{{ reserve.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reserve.dateFin %}{{ reserve.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ reserve.code }}</td>
                <td>{{ reserve.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reserve_show', { 'id': reserve.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reserve_edit', { 'id': reserve.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reserve_new') }}">Create a new reserve</a>
        </li>
    </ul>
{% endblock %}
