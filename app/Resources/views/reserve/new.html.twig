{% extends 'base.html.twig' %}

{% block body %}
    <script src="{{ app.request.getBaseURL() }}../../../assets/js/reservation.js"></script>
    <h1 class="center">Réserver une salle</h1>
    <h2 class="center">Filtres</h2>
    <div class="center">
        <table class="table table-striped table-bordered table-style">
            <thead>
            <tr>
                <th class="center table-title">Type Salle</th>
                <th class="center table-title">Date</th>
                <th class="center table-title">Capacité</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="center">
                    <select id="typeSalleSelected" name="typeSalle" onchange="ajaxGetDisponibilities()">
                        <option value="" selected="selected">Sélectionnez un type de salle</option>>
                        {% for type in typeSalle %}
                            <option value="{{ type.id }}">{{ type.nom }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td class="center" >
                    <input id="dateSelected" type="date" onchange="ajaxGetDisponibilities()">
                </td>
                <td class="center">
                    <input id="capacitySelected" type="number" onchange="ajaxGetDisponibilities()">
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <h2 class="center">Disponibilités</h2>
    <div class="center">

        <table class="table table-striped table-bordered table-style">
            <tr>
                <th class="center table-title">Salle</th>
                <th class="center table-title">Type Salle</th>
                <th class="center table-title">Capacité</th>
            </tr>
            </thead>
            <tbody id="disponibleRoom">

            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">
                    <a class="btn btn-primary" href="#">8:00 - 8:30</a>
                    <a class="btn btn-primary" href="#">8:30 - 9:00</a>
                    <a class="btn btn-primary" href="#">9:00 - 9:30</a>
                    <a class="btn btn-primary" href="#">9:30 - 10:00</a>
                    <a class="btn btn-secondary" href="#">10:00 - 10:30</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <a class="btn btn-secondary" href="#">10:30 - 11:00</a>
                    <a class="btn btn-primary" href="#">11:00 - 11:30</a>
                    <a class="btn btn-primary" href="#">11:30 - 12:00</a>
                    <a class="btn btn-primary" href="#">12:00 - 12:30</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <a class="btn btn-primary" href="#">13:00 - 13:30</a>
                    <a class="btn btn-primary" href="#">13:30 - 14:00</a>
                    <a class="btn btn-primary" href="#">14:00 - 14:30</a>
                    <a class="btn btn-primary" href="#">14:30 - 15:00</a>
                    <a class="btn btn-primary" href="#">15:00 - 15:30</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <a class="btn btn-secondary" href="#">15:30 - 16:00</a>
                    <a class="btn btn-secondary" href="#">16:30 - 17:00</a>
                    <a class="btn btn-secondary" href="#">17:00 - 17:30</a>
                    <a class="btn btn-primary" href="#">17:30 - 18:00</a>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('reserve_index') }}">Back to the list</a>
    </div>
{% endblock %}
